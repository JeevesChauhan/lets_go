<div class="container text-center">
<%= image_tag("contact/icon_man.png", :class => "py-5") %>
</div>
<h1 class="text-center">
  Contact
</h1>
<p class="text-center">Complete the following form to send a message directly to me</p>

<div class="container p-5">
  <%= form_tag request_contact_path, method: 'post' do %>
  <div class="d-block-m-1">
    <%= label_tag :name %><br>
    <%= text_field_tag :name, '', title: 'enter name', size: 50 %>
  </div>

  <div class="d-block-m-1">
    <%= label_tag :email %><br>
    <%= email_field_tag :email, '', title: 'enter email' %>
  </div>
  <div class="d-block-m-1">
    <%= label_tag :telephone %><br>
    <%= telephone_field_tag :telephone, '', title: 'enter telephone' %>
  </div>
  <div class="d-block-m-1">
    <%= label_tag :message %><br>
    <%= text_field_tag :message, '', title: 'enter message', size: 100 %>
  </div>
  <div class="p-5">
    <%= submit_tag 'submit', :class => "btn btn-link btn-primary text-white" %>
  </div>
<% end %>
</div>
