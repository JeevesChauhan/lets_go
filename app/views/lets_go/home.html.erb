<h1>LetsGo#home</h1>
<p>Find me in app/views/lets_go/home.html.erb</p>

<div id="map">
  <script>
    var map;
    function initMap() {
      map = new google.maps.Map(document.getElementById('map'), {
        center: {
          lat: 51.243325,
          lng: -0.589844
        },
        zoom: 17
      });
      var maker = new google.maps.Marker({
        position: {
          lat: 51.243325,
          lng: -0.589844
        },
        map: map
      })
    }
  </script>
</div>

<table>
  <tr>
    <th>Name</th>
    <th>Type</th>
    <th>Lat</th>
    <th>Long</th>
  </tr>
  <% LandMark.all.each do |data| %>
    <tr>
      <td><%= data.name %></td>
      <td>
        <% if data.is_gym %>
          <%= 'Gym' %>
        <% else %>
          <%= 'Poke Stop' %>
        <% end %>
      </td>
      <td><%= data.lat %></td>
      <td><%= data.long %></td>
    </tr>
  <% end %>
</table>

<script async="async" defer="defer" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCVqQXR-NMqREuqwTCTA58MmYWAa_LyOEg&callback=initMap"></script>
